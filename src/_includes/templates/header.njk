<header>
  {% if '/posts' in url %}
    <section class="post-main-header main-header-post max-w-screen-sm mx-auto">
      <div>
        <a href="/">
          <p>
            <i class="fa-solid back-icon fa-circle-arrow-left"></i>
            Voltar
          </p>
        </a>
        <h1 class="title">
          {{ title | safe }}
        </h1>
        <p class="author">
          {{ author | safe }}
        </p>
        <p class="date">
          {{ date | date('HUMAN_DATE') }}
        </p>
      </div>
    </section>
  {% else %}
    <section class="main-header mx-auto">
      <div>
        <a href="/" class="img" style="background-image: url({{ img | safe }});"></a>
        <h1 class="title">
          {{ name }}
        </h1>
        <p>
          {{ author }}
        </p>
        {% if links.length >= 1 %}
          <div class="links">
            {% for link in links %}
              <a href="{{link.url}}" target="_blank">{{ link.name | safe }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </section>
  {% endif %}
</header>

<style>
  .main-header {
    height: 20rem;
    width: 100%;
  }

  .main-header > div, .main-header-post > div {
    display: flex;
    justify-content: center;
    flex-direction: column;
    height: 100%;
    width: 100%;
  }

  .main-header > div {
    align-items: center;
  }

  .main-header > div > h1 {
    font-weight: 700;
    font-size: 2.25rem;
    line-height: 2.5rem;
    margin:0;
    margin-top: 0.75rem;
  }

  .main-header > div > p {
    font-weight: 500;
    font-size: 0.85rem;
    line-height: 2.5rem;
    margin:0;
    margin-top: 0.75rem;
  }

  .main-header > div > div {
    margin: 0;
  }

  .main-header-post {
    height: 15rem;
  }

  .post-main-header {
    margin-bottom: 15px;
  }

  .title {
    margin: 0;
    margin-top: 60px;
    font-size: 2.2rem;
  }

  .date, .author {
    margin: 0;
  }

  .back-icon {
    margin-right: 5px;
  }

  .img {
    display: block;
    background-size: cover;
    border-width: 4px;
    border-style: solid;
    width: 6.25rem;
    height: 6.25rem;
    color: var(--main-text-color);
    text-decoration: var(--main-text-color);
  }

</style>
